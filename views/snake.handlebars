<section class="welcomeSnake">
    <div class="animalName">
        <h2 id="welcomeText">Snakes</h2>
        <p>
            "Just as a snake sheds its skin, we must shed our past over and over
            again." <br />-David Lee
        </p>
    </div>
</section>
<section class="animals">
    <div class="collection">
        <h2>Our Collection</h2>
    </div>
    <div class="holder" id="animals">
        {{#each snakes as |snake|}}
        <div class="display addCart" data-id="{{snake.id}}" data-name="{{snake.name}}">
            <img src={{snake.img}} alt="snake" />
            <h2>{{snake.name}}</h2>
            <p>${{snake.price}}</p>
            <p>Stock: {{snake.quantity}}</p>
        </div>
        {{/each}}
    </div>
</section>
